// Header
header.header
    nav.nav.nav--tours
        a(href="/" class="nav__el") All tours
        form.nav__search
            button.nav__search-btn
                svg: use(xlink:href="/img/icons.svg#icon-search")
            
            input(type="text" placeholder="Search tours" class="nav__search-input")
            
    .header__logo
        img(src="/img/logo-white.png" alt="Natours logo")

    nav.nav.nav--user
        if user
            a(href="/me" class="nav__el")
                img(src=`/img/users/${user.photo}` alt=`${user.name}` class="nav__user-img" )
                span= user.name
            a(href="#" class="nav__el" id="logout") Log out
        else
            a.nav__el(href="/login") Log in
            a.nav__el(href="sign-up") Sign up